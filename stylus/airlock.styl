/**
* Font Awesome
**/

fa(icon, before=true, col=inherit, mrg=0, align=center)
  font-family FontAwesome
  text-align align
  if before
    &:before
      content icon
      color col
      margin-right mrg
  else
    &:after
      content icon
      color col
      margin-left mrg
