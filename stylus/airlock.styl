    bgc(_dark)
    input[type="text"], input[type="email"], input[type="password"], input[type="file"]
      display inline-block
      font-size .75rem
      p(1em,1em)
      color space_slate
      border none
    label
      display inline-block
      color space_ghost
      font-size .75rem
      p(1em)
