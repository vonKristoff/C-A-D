/**
** Display
**/

wh(width = auto, height = auto)
  width width
  height height

.airline
  font-size 0

.airlock
  position relative

_airline(items = 1, align = center)
  _width = "calc(100% / %s)" % items
  display inline-block
  width _width
  font-size 1rem
  text-align align

_airline-gap(width = 50%, items = 2, gap = 1em, align = center)
  _width = "calc(100% / %s)" % items
  display inline-block
  width "calc(%s - %s)" % (width  (gap))
  font-size 1rem
  text-align align
  margin-right gap
  &:first-child
    margin-left "calc(%s - %s / %s)" % (gap (gap) (items))
  &:last-child
    margin-right 0

